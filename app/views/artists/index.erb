<html>
  <body>
    <h1> Artists - <%= Artist.all.size %> Total</h1>
    <ol>
      <% @artists.each_with_index do |artist, i| %>
      <li><a href="<%= "artists/#{artist.name.gsub(' ', '_')}.html" %>"><%= "#{artist.name} - #{artist.songs.count} songs" %></a></li>
      <% end %>
    </ol>
  </body>
</html>